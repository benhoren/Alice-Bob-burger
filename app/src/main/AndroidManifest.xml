<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecorp.abhamburger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".registerActivity" />
        <activity
            android:name=".ManagerActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".customerActivity"
            android:label="@string/title_activity_customer" />
        <activity
            android:name=".EmployeeActivity"
            android:label="@string/title_activity_employee_acticity" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".pieChart" />
        <activity android:name=".barChart"></activity>
    </application>

</manifest>